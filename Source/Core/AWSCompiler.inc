//Compiler options. Do not change them.

{$OVERFLOWCHECKS ON}  //Could be off
{$IOCHECKS ON}
{$RANGECHECKS ON}
{$IFDEF FPC}
  {$RANGECHECKS OFF} //to allow to compile enums out of range.
{$ENDIF}

{.$DEBUGINFO OFF} //!!!!!
{$IFNDEF FPC}
  {$LOCALSYMBOLS ON}  //Ignored when debuginfo is off
  {$REFERENCEINFO ON}
{$ENDIF}

{$IFNDEF FPC}
{$IFDEF DELPHIXE2}
  {$EXCESSPRECISION ON}
{$ENDIF}
  {$HIGHCHARUNICODE ON}
  {$IMPORTEDDATA ON}
{$ENDIF}

{$ALIGN 8}
{$ASSERTIONS ON}
{$BOOLEVAL OFF}

{$LONGSTRINGS ON}

{$IFNDEF FPC}
  {$METHODINFO OFF}
{$ENDIF}

{$MINENUMSIZE 4}

{$OPTIMIZATION ON}

{$IFNDEF FPC}
  {$SAFEDIVIDE OFF}
{$ENDIF}

{$POINTERMATH ON}

{$IFNDEF FPC}
  {$REALCOMPATIBILITY OFF}
{$ENDIF}

{$SCOPEDENUMS ON}   //keep it ON.
{$STACKFRAMES OFF}
{$TYPEDADDRESS OFF}

{$VARSTRINGCHECKS ON}
{$WRITEABLECONST OFF}

{$STRINGCHECKS OFF} //Not needed after 2010

{$INLINE OFF}
{$IFNDEF FPC}
{$WARN UNSUPPORTED_CONSTRUCT OFF} //doesn't work, needs to be defined in project.
{$WARN XML_NO_MATCHING_PARM OFF}
{$ENDIF}

